{
  "manifest_version": 3,
  "name": "Data Tracker",
  "version": "1.0",
  "description": "A Chrome extension to monitor data usage per website.",
  "permissions": [
    "webRequest",
    "storage",
    "tabs",
    "notifications",
    "declarativeNetRequest",
    "webNavigation",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    }
  },
  "icons": {
    "16": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}